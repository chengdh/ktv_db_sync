 -- to table
 -- BL_TBL_Material_Storage	酒水库存	
 /*
  1	  StorageID	        库存主键	    int
  2	  DataDealState			              int
	3	  WineMaterialID	      商品id		int
	4	  StorageNumber	      库存数量		numeric
	5	  AdvanceNumber	  库存数量-扩展		numeric
	6	  StorageUnitID	        仓库id		int
	7	  DataModifyState			            int
	8	  CheckInvalid			              int
	9	  CatenationID			              int
	10	OperatorID			                varchar
	11	Operator			                  varchar
	12	OperateTime			                datetime
	13	AveMoney	库存金额/或加权平均单价		money
  */
  -- todo 需要手工设置warehouse_id
  --  ERP超市总库 warehouse id = 4
  -- StorageUnitID = 1 对应视易系统中的仓库id
  COPY (SELECT 
	    p.external_id AS	WineMaterialID,
	    sum(coalesce(income.product_qty,0)) - sum(coalesce(outgoing.product_qty,0)) AS	StorageNumber,
	    0 AS  AdvanceNumber,
		  1 AS  StorageUnitID
    FROM product_product p
    LEFT OUTER JOIN stock_move AS income
      ON p.id = income.product_id
      AND income.state = 'done'
      AND income.location_id NOT IN (SELECT lot_stock_id FROM stock_warehouse WHERE id=4)
      AND income.location_dest_id IN (SELECT lot_stock_id FROM stock_warehouse WHERE id=4)
    LEFT OUTER JOIN stock_move AS outgoing
      ON p.id = outgoing.product_id
      AND outgoing.state = 'done'
      AND outgoing.location_id IN (SELECT lot_stock_id FROM stock_warehouse WHERE id= 4)
      AND outgoing.location_dest_id NOT IN (SELECT lot_stock_id FROM stock_warehouse WHERE id= 4)
    GROUP BY p.id
    )
 TO '/home/openerp/ktv_db_sync/export/BL_TBL_Material_Storage.csv' CSV;
